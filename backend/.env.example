# Application
APP_NAME=Digiskills IT Helpdesk
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database
DATABASE_URL=sqlite:///./digiskills.db

# CORS (adjust for your frontend URL)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@digiskills.local
SMTP_ENABLED=false

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif,txt
UPLOAD_DIR=./uploads

# Admin User (created on first run)
ADMIN_EMAIL=admin@digiskills.local
ADMIN_PASSWORD=admin123
ADMIN_USERNAME=admin
